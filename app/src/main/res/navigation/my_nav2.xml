<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav2"
    app:startDestination="@id/genreFragment">

    <fragment
        android:id="@+id/genreFragment"
        android:name="com.example.etpproject.GenreFragment"
        android:label="fragment_genre"
        tools:layout="@layout/fragment_genre" >
        <action
            android:id="@+id/action_genreFragment_to_genreSpecificFragment"
            app:destination="@id/genreSpecificFragment" />
    </fragment>
    <fragment
        android:id="@+id/genreSpecificFragment"
        android:name="com.example.etpproject.genreSpecificFragment"
        android:label="fragment_genre_specific"
        tools:layout="@layout/fragment_genre_specific" >
        <action
            android:id="@+id/action_genreSpecificFragment_to_genreFragment"
            app:destination="@id/genreFragment" />
        <argument
            android:name="genrename"
            app:argType="string" />
    </fragment>
</navigation>